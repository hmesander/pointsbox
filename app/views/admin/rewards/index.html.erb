<div class="page-header">
  Rewards
</div>

<%= render partial: "partial/flash" %>

<div class="button">
  <%= link_to "Add a Reward", new_admin_reward_path %>
</div>

<div class="flex-box">
  <% @rewards.each do |reward| %>
    <div class="box">
      <strong><%= reward.title %></strong>
      <strong><%= reward.description %></strong>
      <strong><%= reward.value %> Points</strong>
      <% if current_user %>
        <div class="button">
          <%= link_to "Update Reward", edit_admin_reward_path(reward), title: reward.title %>
          <%= link_to "Delete Reward", reward_path(reward), title: reward.description, method: "delete", data: {confirm: "Are you sure you want to delete #{reward.title}?"} %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
