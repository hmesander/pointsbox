<div class="form">
  <%= form_for @reward do |f| %>
    <div class="form-group">
      <%= f.label :title %>:
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :value %>:
      <%= f.number_field :value %>
    </div>

    <div class="form-group">
      <%= f.label :description %>:
      <%= f.text_area :description %>
    </div>

    <div class="button">
      <%= f.submit %>
    </div>
  <% end %>
</div>
