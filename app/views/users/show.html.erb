<% if @correct_user %>
  <div class="page-header">
    Welcome, <%= current_user.username %>!
  </div>

  <%= render partial: "partial/flash" %>

  <div class="info">
    <div class="box">
      <strong>Total Points:</strong>  <%= @user.total_points %>
    </div>
    <div class="flex-box">
      <strong>Rewards Earned:</strong><br>
      <% current_user.rewards.each do |reward| %>
        <div class="box">
          <strong><%= reward.title %></strong><br>
          <%= reward.description %><br>
          <%= reward.value %> Points<br>
        </div>
      <% end %>
    </div>
  </div><br>
<% else %>
  <%= render file: "/public/404" %>
<% end %>
