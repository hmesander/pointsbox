<div class="page-header">
  <h1>Rewards</h1>
</div>

<%= render partial: "partial/flash" %>

<div class="info">
  <% @rewards.each do |reward| %>
    <strong><%= reward.title %></strong>
    <strong><%= reward.description %></strong>
    <strong><%= reward.value %> Points</strong>
    <%= reward.image %>
    <% if current_user %>
    <div class="buttons">
      <%= link_to "Redeem #{reward.title}", user_rewards_path(user_id: current_user.id, reward_id: reward.id), method: :post %>
    </div>
    <% end %>
  <% end %>
</div>
