<% @rewards.each do |reward| %>
  <div>
    <%= reward.title %>
    <%= reward.description %>
    <%= reward.value %>
    <%= reward.image %>
    <% if current_user %>
      <%= link_to "Redeem #{reward.title}", user_rewards_path(user_id: current_user.id, reward_id: reward.id), method: :post %>
    <% end %>
  </div>
<% end %>
